{% extends "pages/admin/base.html.twig" %}
{% block body %}
	<div class="d-flex justify-content-between align-items-center">
		<h2>Gestion des Utilisateurs</h2>
	</div>
	<div class="row my-4">
		<div class="col-12 col-xl-12 mb-4 mb-lg-0">
			<div class="card">
				<div class="card-body">
					<div class="table-responsive">
						<table id="table-user" data-toggle="table" data-pagination="true" data-page-size="10" data-search="true" data-locale="fr-FR" class="table">
							<thead>
								<tr>
									<th data-field="id">Id</th>
									<th data-field="username">Utilisateur</th>
									<th data-field="email">Email</th>
									<th data-field="role">Role</th>
									<th data-field="created_at">Inscrit le</th>
									<th data-formatter="actionFormatter" data-events="actionEvents">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for user in users %}
									<tr>
										<td>{{ user.id }}</td>
										<td>{{ user.username }}</td>
										<td>{{ user.email|lower }}</td>
										<td>{{ user.role == 'ROLE_USER' ? 'Utilisateur' : 'Administrateur' }}</td>
										<td>{{ user.createdAt|date('d/m/Y') }}</td>
										<td></td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
