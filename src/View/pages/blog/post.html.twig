{% extends 'base.html.twig' %}
{% block body %}
	<section id="blog" class="blog mt-4">
		<div class="container pt-4" data-aos="fade-up">
			<div class="row">
				<div class="col-lg-8 entries">
					<article class="entry entry-single">
						<div class="entry-img">
							<img src="{{ post.featuredImage }}" alt="Illustration of the post {{ post.slug }}" class="img-fluid">
						</div>
						<h2 class="entry-title">
							<a href="/blog/post/{{ post.slug }}">{{ post.title }}</a>
						</h2>
						<div class="entry-meta">
							<ul>
								<li class="d-flex align-items-center">
									<i class="bi bi-person"></i>
									<a href="/blog/author/{{ post.author }}">
										{{ post.author }}</a>
								</li>
								<li class="d-flex align-items-center">
									<i class="bi bi-clock"></i>
									<a href="/blog/date/{{ post.createdAt|date("y-m-d") }}">
										<time datetime="{{ post.createdAt|date("d/m/Y") }}">
											{{ post.createdAt|date("d/m/Y") }}</time>
									</a>
								</li>
								<li class="d-flex align-items-center">
									<i class="bi bi-chat-dots"></i>
									<a href="#comment-section">{{ post.numberOfComments }}
										Commentaire{{ post.numberOfComments > 1 ? 's' : '' }}</a>
								</li>
							</ul>
						</div>
						<div class="entry-content">
							{{ post.content }}
						</div>
						<div class="entry-footer">
							<i class="bi bi-folder"></i>
							<ul class="categories">
								<li>
									<a href="/blog/category/{{ post.categorySlug }}">{{ post.category }}</a>
								</li>
							</ul>
							<i class="bi bi-tags"></i>
							<ul class="tags">
								{% for tag in post.tags %}
									<li>
										<a href="/blog/tag/{{ tag.slug }}">{{ tag.name }}</a>

									</li>
								{% endfor %}
							</ul>
						</div>
					</article>
					<!-- End blog entry -->
					<div class="blog-author d-flex align-items-center">
						<img src="{{ author.avatar }}" class="rounded-circle float-left" alt="avater of the author {{ post.author }}">
						<div>
							<h4>
								{{ post.author }}
							</h4>
							<small class="text-muted">({{ author.role }})</small>
							<div class="social-links">
								<a href="https://twitters.com/#">
									<i class="bi bi-twitter"></i>
								</a>
								<a href="https://facebook.com/#">
									<i class="bi bi-facebook"></i>
								</a>
								<a href="https://instagram.com/#">
									<i class="biu bi-instagram"></i>
								</a>
							</div>
							<p>{{ author.bio }}</p>
						</div>
					</div>
					<!-- End blog author bio -->
					{% include "_partials/comment_section.html.twig" %}
					<!-- End blog comments -->
				</div>
				<!-- End blog entries list -->
				{% include "_partials/blog_sidebar.html.twig" %}
				<!-- End blog sidebar -->
			</div>
		</div>
	</section>
{% endblock %}
