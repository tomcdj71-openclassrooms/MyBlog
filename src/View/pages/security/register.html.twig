{% extends "base.html.twig" %}
{% block body %}
	<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
		<div class="container">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
						<div class="card mb-3">
							<div class="card-body">
								<div class="pt-4 pb-2">
									<h5 class="card-title text-center pb-0 fs-4">Créer un compte</h5>
									<p class="text-center small">Entre vos informations de connexion</p>
								</div>
								<form class="row g-3 needs-validation" method="POST" novalidate="" data-np-autofill-type="register" data-np-checked="1" data-np-watching="1">
									<div class="col-12">
										<label for="email" class="form-label">Votre email</label>
										<div class="input-group has-validation">
											<span class="input-group-text" id="inputGroupPrepend">
												<i class="bi bi-envelope"></i>
											</span>
											<input type="email" name="email" class="form-control" id="email" required="" data-np-autofill-type="identity_email" data-np-uid="570b29d1-12c5-4881-b6b2-8207cef012f9" autocomplete="off" data-np-checked="1">
											<div class="invalid-feedback">Veuillez entrer une addresse mail valide!</div>
											<span data-np-uid="850aa6be-7cf7-404e-a1e3-f2fe0d6c238d" style="width: 24px; min-width: 24px; height: 24px; background-image: url(&quot;moz-extension://fd2768e8-0512-443f-a150-1b711559b771/assets/manifestIcons/icon.svg&quot;); background-repeat: no-repeat; background-position: left center; background-size: auto; border: medium none; display: inline-block; visibility: visible; position: absolute; cursor: pointer; z-index: 998; padding: 0px; transition: none 0s ease 0s; pointer-events: all; right: 0px; left: 324px; top: 6px; min-height: 24px;"></span>
										</div>
										<div class="col-12">
											<label for="username" class="form-label">Nom d'utilisateur</label>
											<div class="input-group has-validation">
												<span class="input-group-text" id="inputGroupPrepend">
													<i class="bi bi-person"></i>
												</span>
												<input type="text" name="username" class="form-control" id="username" required="" data-np-autofill-type="identity_email" data-np-uid="850aa6be-7cf7-404e-a1e3-f2fe0d6c238d" autocomplete="off" data-np-checked="1">
												<div class="invalid-feedback">Veuillez choisir votre nom d'utilisateur.</div>
												<span data-np-uid="850aa6be-7cf7-404e-a1e3-f2fe0d6c238d" style="width: 24px; min-width: 24px; height: 24px; background-image: url(&quot;moz-extension://fd2768e8-0512-443f-a150-1b711559b771/assets/manifestIcons/icon.svg&quot;); background-repeat: no-repeat; background-position: left center; background-size: auto; border: medium none; display: inline-block; visibility: visible; position: absolute; cursor: pointer; z-index: 998; padding: 0px; transition: none 0s ease 0s; pointer-events: all; right: 0px; left: 324px; top: 6px; min-height: 24px;"></span>
											</div>
										</div>
										<div class="col-12">
											<label for="password" class="form-label">Mot de passe</label>
											<div class="input-group has-validation">
												<span class="input-group-text" id="inputGroupPrepend">
													<i class="bi bi-lock"></i>
												</span>
												<input type="password" name="password" class="form-control" id="password" required="" data-np-autofill-type="generate" data-np-uid="5f4060e7-5886-4d69-b094-f77470665e27" autocomplete="off" data-np-checked="1">
												<div class="invalid-feedback">Veuillez choisir votre mot de passe!</div>
												<span data-np-uid="5f4060e7-5886-4d69-b094-f77470665e27" style="width: 24px; min-width: 24px; height: 24px; background-image: url(&quot;moz-extension://fd2768e8-0512-443f-a150-1b711559b771/assets/manifestIcons/icon.svg&quot;); background-repeat: no-repeat; background-position: left center; background-size: auto; border: medium none; display: inline-block; visibility: visible; position: absolute; cursor: pointer; z-index: 998; padding: 0px; transition: none 0s ease 0s; pointer-events: all; right: 0px; left: 343px; top: 421.8px; min-height: 24px;"></span>
											</div>
										</div>
										<div class="col-12">
											<label for="passwordConfirm" class="form-label">Confirmation mot de passe</label>
											<div class="input-group has-validation">
												<span class="input-group-text" id="inputGroupPrepend">
													<i class="bi bi-lock"></i>
												</span>
												<input type="password" name="passwordConfirm" class="form-control" id="passwordConfirm" required="">
												<div class="invalid-feedback">Veuillez confirmer votre mot de passe!</div>
											</div>
										</div>
									</div>
									<input type="hidden" name="csrfToken" value="{{ csrfToken }}">
									<div class="col-12">
										<button class="btn btn-indigo w-100" type="submit" name="register">Créer un compte</button>
									</div>
									<div class="col-12">
										<p class="small mb-0">Déjà un compte?
											<a href="{{ path('login') }}">Se connecter</a>
										</p>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
