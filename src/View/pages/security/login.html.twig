{% extends "base.html.twig" %}
{% block body %}
	<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
					<div class="card mb-3">
						<div class="card-body">
							<div class="pt-4 pb-2">
								<h5 class="card-title text-center pb-0 fs-4">Connectez-vous à votre compte</h5>
								<p class="text-center small">Entrez votre email &amp; mot de passe pour se connecter</p>
							</div>
							<form class="row g-3 needs-validation" method="POST">
								<div class="col-12">
									<label for="email" class="form-label">Votre email *</label>
									<div class="input-group has-validation">
										<span class="input-group-text {% if errors is defined and errors is not empty %} border-danger{% endif %}" id="inputGroupPrepend">
											<i class="bi bi-envelope"></i>
										</span>
										<input type="email" name="email" class="form-control {% if errors is defined and errors is not empty %} is-invalid{% endif %}" id="email" required="" value="{{ formData.email|default('')|e('html_attr') }}">
									</div>
								</div>
								<div class="col-12">
									<label for="password" class="form-label">Mot de passe *</label>
									<div class="input-group has-validation">
										<span class="input-group-text {% if errors is defined and errors is not empty %} border-danger{% endif %}" id="inputGroupPrepend">
											<i class="bi bi-lock"></i>
										</span>
										<input type="password" name="password" class="form-control {% if errors is defined and errors is not empty %} is-invalid{% endif %}" id="password" required="" value="{{ formData.password|default('')|e('html_attr') }}">
									</div>
									{% if errors is defined and errors is not empty %}
										<div class="alert alert-danger mt-3">
											{{ errors[0] }}
										</div>
									{% endif %}
								</div>
								<input type="hidden" name="csrfToken" value="{{ csrfToken }}">
								<div class="col-12">
									<button class="btn btn-indigo w-100" type="submit">Connexion</button>
								</div>
								<div class="col-12">
									<p class="small mb-0">Pas de compte?
										<a href="{{ path('register') }}">Créez un compte !</a>
									</p>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
