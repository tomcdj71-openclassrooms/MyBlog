<header id="header" class="fixed-top">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="header">
		<a class="navbar-brand" href="{{ path('home') }}"><img src=""></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
			<ul class="navbar-nav">
				<div class="centered-pill">
					<li class="nav-item">
						{# Due to my routing system, I need to make this if/esle statement in order to always redirect to / the "home" route #}
						{# If I don't do that, if I'm on 'blog_post' for example, the 'home' route generated will be 'blog_post' too ! #}
						{% set home = path('home' ) %}
							{% if home == '' %}
							{% set home = '/' %}
						{% else %}
							{% set home = '/' ~ home %}
						{% endif %}

						<a class="nav-link centered-pill-button {{ route == 'portfolio' ? 'active' : '' }}" href="{{ path('home') }}">Accueil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link centered-pill-button {{ route == 'blog' ? 'active' : '' }}" href="{{ path('blog') }}">Blog</a>
					</li>
				</div>
			</ul>
		</div>
		<div class="navbar-nav ml-auto">
			{% if session.get('user') is not defined or session.get('user') is null %}
				<a class="nav-item nav-link" href="{{ path('login') }}">Connexion</a>
			{% elseif session.get('user') is not null %}
				<a class="nav-item nav-link" href="{{ path('logout') }}">DÃ©connexion</a>
			{% endif %}
		</div>
	</nav>
</header>
